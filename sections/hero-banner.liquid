{%- style -%}
  .hero-banner {
    position: relative;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: {{ section.settings.content_alignment }};
    overflow: hidden;
    min-height: {{ section.settings.height_mobile }}vh;
  }

  @media screen and (min-width: 750px) {
    .hero-banner {
      min-height: {{ section.settings.height_desktop }}vh;
    }
  }

  .hero__bg {
    position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: -1;
  }
  
  /* Responsive Image Logic */
  .hero__bg img { width: 100%; height: 100%; object-fit: cover; }
  .mobile-hide { display: none; }
  
  @media screen and (min-width: 750px) {
    .mobile-hide { display: block; }
    .desktop-hide { display: none; }
  }

  .hero__content {
    max-width: 500px;
    padding: 30px;
    background: {{ section.settings.overlay_color | color_modify: 'alpha', 0.4 }};
    color: {{ section.settings.text_color }};
    margin: 5%;
    text-align: start; /* Supports RTL */
    z-index: 2;
  }

  .hero__button {
    display: inline-block;
    padding: 12px 30px;
    background: {{ section.settings.btn_bg }};
    color: {{ section.settings.btn_text }};
    text-decoration: none;
    margin-top: 20px;
    font-weight: bold;
  }
{%- endstyle -%}

<section class="hero-banner">
  <div class="hero__bg">
    {%- if section.settings.image_mobile != blank -%}
      {%- comment -%} Mobile Image {%- endcomment -%}
      <div class="desktop-hide">
        {{ section.settings.image_mobile | image_url: width: 800 | image_tag: loading: 'eager' }}
      </div>
      {%- comment -%} Desktop Image {%- endcomment -%}
      <div class="mobile-hide">
        {%- if section.settings.image_desktop != blank -%}
          {{ section.settings.image_desktop | image_url: width: 2000 | image_tag: loading: 'eager' }}
        {%- endif -%}
      </div>
    {%- else -%}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}
  </div>

  <div class="hero__content">
    <h2 style="font-size: {{ section.settings.heading_size }}px;">{{ section.settings.title }}</h2>
    <p>{{ section.settings.subtext }}</p>
    {%- if section.settings.btn_label != blank -%}
      <a href="{{ section.settings.btn_link }}" class="hero__button">
        {{ section.settings.btn_label }}
      </a>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner Responsive",
  "settings": [
    { "type": "image_picker", "id": "image_desktop", "label": "Desktop Background Image" },
    { "type": "image_picker", "id": "image_mobile", "label": "Mobile Background Image" },
    {
      "type": "select",
      "id": "height_desktop",
      "label": "Desktop Height",
      "options": [
        { "value": "60", "label": "Short" },
        { "value": "80", "label": "Medium" },
        { "value": "100", "label": "Full Screen" }
      ],
      "default": "80"
    },
    {
      "type": "select",
      "id": "height_mobile",
      "label": "Mobile Height",
      "options": [
        { "value": "50", "label": "Short" },
        { "value": "70", "label": "Medium" },
        { "value": "90", "label": "Full Screen" }
      ],
      "default": "70"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content Position",
      "options": [
        { "value": "flex-start", "label": "Left (Start)" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "Right (End)" }
      ],
      "default": "center"
    },
    { "type": "text", "id": "title", "label": "Heading", "default": "New Arrivals" },
    { "type": "range", "id": "heading_size", "min": 24, "max": 64, "step": 2, "unit": "px", "label": "Heading Font Size", "default": 40 },
    { "type": "textarea", "id": "subtext", "label": "Subtext", "default": "Explore the collection." },
    { "type": "text", "id": "btn_label", "label": "Button Label", "default": "Shop Now" },
    { "type": "url", "id": "btn_link", "label": "Button Link" },
    { "type": "color", "id": "overlay_color", "label": "Content Box Color", "default": "#000000" },
    { "type": "color", "id": "text_color", "label": "Text Color", "default": "#ffffff" },
    { "type": "color", "id": "btn_bg", "label": "Button Color", "default": "#ffffff" },
    { "type": "color", "id": "btn_text", "label": "Button Text", "default": "#000000" }
  ],
  "presets": [
    { "name": "Hero Banner Responsive" }
  ]
}
{% endschema %}