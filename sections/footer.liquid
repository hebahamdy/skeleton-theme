{%- style -%}
  .footer {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding: 60px 5% 30px;
    border-top: 1px solid rgba(0,0,0,0.1);
    text-align: start; /* Essential for RTL */
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
  }

  @media screen and (min-width: 750px) {
    .footer-grid { grid-template-columns: 2fr 1fr 1fr 1fr; }
  }

  .footer-heading { font-weight: bold; margin-bottom: 20px; display: block; }
  .footer-links { list-style: none; padding: 0; margin: 0; }
  .footer-links li { margin-bottom: 10px; }
  .footer-links a { color: inherit; text-decoration: none; opacity: 0.8; }
  .footer-links a:hover { opacity: 1; }

  .payment-icons {
    margin-top: 40px;
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
    filter: grayscale(1); /* Premium minimal look */
    opacity: 0.6;
  }

  .payment-icons img { height: 24px; width: auto; }
{%- endstyle -%}

<footer class="footer">
  <div class="footer-grid">
    <div class="footer-col">
      <span class="footer-heading">{{ section.settings.newsletter_title }}</span>
      <p style="font-size: 14px; opacity: 0.8;">{{ section.settings.newsletter_desc }}</p>
      {% form 'customer' %}
        <div style="display:flex; gap: 10px; margin-top: 15px;">
          <input type="email" name="contact[email]" placeholder="Email" style="padding: 10px; flex: 1; border: 1px solid #ddd;">
          <button type="submit" style="padding: 10px 20px; background: #000; color: #fff; border: none;">Subscribe</button>
        </div>
      {% endform %}
    </div>

    {%- for block in section.blocks -%}
      <div class="footer-col" {{ block.shopify_attributes }}>
        <span class="footer-heading">{{ block.settings.heading }}</span>
        <ul class="footer-links">
          {%- for link in linklists[block.settings.menu].links -%}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {%- endfor -%}
        </ul>
      </div>
    {%- endfor -%}
  </div>

  <div style="margin-top: 60px; border-top: 1px solid rgba(0,0,0,0.05); padding-top: 30px; display: flex; flex-wrap: wrap; justify-content: space-between; align-items: center;">
    <p style="font-size: 12px; opacity: 0.5;">&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
    
    <div class="payment-icons">
      <span>Visa</span>
      <span>Mastercard</span>
      <span style="font-weight: bold; color: #00d1c1;">Tabby</span>
      <span style="font-weight: bold; color: #ff9d00;">Tamara</span>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "max_blocks": 3,
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Background Color", "default": "#f9f9f9" },
    { "type": "color", "id": "text_color", "label": "Text Color", "default": "#121212" },
    { "type": "text", "id": "newsletter_title", "label": "Newsletter Heading", "default": "Join our list" },
    { "type": "text", "id": "newsletter_desc", "label": "Newsletter Description", "default": "Get special offers and first look at new arrivals." }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        { "type": "text", "id": "heading", "label": "Heading", "default": "Quick Links" },
        { "type": "link_list", "id": "menu", "label": "Menu", "default": "footer" }
      ]
    }
  ]
}
{% endschema %}