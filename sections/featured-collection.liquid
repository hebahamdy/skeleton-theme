{%- style -%}
  .featured-collection {
    padding: 60px 5%;
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 40px;
    text-align: start; /* Supports RTL */
  }

  .grid-container {
    display: grid;
    grid-template-columns: repeat(2, 1fr); /* 2 columns on mobile */
    gap: 20px;
  }

  @media screen and (min-width: 750px) {
    .grid-container {
      grid-template-columns: repeat({{ section.settings.grid_desktop }}, 1fr);
    }
  }

  /* Product Card Styles */
  .product-card {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  .product-card__image-wrapper {
    position: relative;
    overflow: hidden;
    aspect-ratio: 1 / 1;
    background: #f3f3f3;
    border-radius: 4px;
  }

  .product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .product-card:hover .product-card__image {
    transform: scale(1.05);
  }

  .product-card__info {
    padding: 15px 0;
    text-align: start; /* Essential for Arabic titles */
  }

  .product-card__title {
    margin: 0 0 5px 0;
    font-size: 16px;
    font-weight: 500;
  }

  .product-card__price {
    font-weight: bold;
    color: {{ section.settings.price_color }};
  }

  .view-all-link {
    color: inherit;
    text-decoration: underline;
    font-weight: 500;
  }
{%- endstyle -%}

<section class="featured-collection">
  <div class="section-header">
    <div>
      <h2 style="margin: 0;">{{ section.settings.title }}</h2>
      {% if section.settings.subtitle != blank %}
        <p style="opacity: 0.7; margin: 5px 0 0 0;">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>
    {% if section.settings.show_view_all %}
      <a href="{{ section.settings.collection.url }}" class="view-all-link">View All</a>
    {% endif %}
  </div>

  <div class="grid-container">
    {%- assign collection = section.settings.collection -%}
    
    {%- if collection != blank and collection.products_count > 0 -%}
      {%- for product in collection.products limit: section.settings.limit -%}
        <a href="{{ product.url }}" class="product-card">
          <div class="product-card__image-wrapper">
            {{ product.featured_media | image_url: width: 800 | image_tag: 
              class: 'product-card__image', 
              loading: 'lazy', 
              widths: '200, 400, 600, 800' 
            }}
          </div>
          <div class="product-card__info">
            <h3 class="product-card__title">{{ product.title }}</h3>
            <div class="product-card__price">
              {{ product.price | money }}
            </div>
          </div>
        </a>
      {%- endfor -%}
    {%- else -%}
      {%- comment -%} Placeholder state for when no collection is selected {%- endcomment -%}
      {%- for i in (1..section.settings.limit) -%}
        <div class="product-card">
          <div class="product-card__image-wrapper">
            {{ 'product-' | append: i | placeholder_svg_tag: 'product-card__image' }}
          </div>
          <div class="product-card__info">
            <h3 class="product-card__title">Sample Product {{ i }}</h3>
            <div class="product-card__price">{{ 19900 | money }}</div>
          </div>
        </div>
      {%- endfor -%}
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    { "type": "text", "id": "title", "label": "Heading", "default": "Featured Collection" },
    { "type": "text", "id": "subtitle", "label": "Subheading", "default": "Shop our latest arrivals" },
    { "type": "collection", "id": "collection", "label": "Collection" },
    { "type": "range", "id": "limit", "min": 2, "max": 12, "step": 1, "label": "Products to show", "default": 4 },
    { "type": "range", "id": "grid_desktop", "min": 2, "max": 5, "step": 1, "label": "Columns on Desktop", "default": 4 },
    { "type": "checkbox", "id": "show_view_all", "label": "Show 'View All' link", "default": true },
    { "type": "header", "content": "Colors" },
    { "type": "color", "id": "bg_color", "label": "Background Color", "default": "#ffffff" },
    { "type": "color", "id": "text_color", "label": "Text Color", "default": "#121212" },
    { "type": "color", "id": "price_color", "label": "Price Color", "default": "#000000" }
  ],
  "presets": [
    { "name": "Featured Collection" }
  ]
}
{% endschema %}